<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/id_marker_info"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="#CC4e5a6b"
        android:clickable="true"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/img_icon_infoDetailLocation"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/info_bottom"
            android:layout_margin="8dp"
            android:alpha="1.0"
            android:background="@drawable/map_image_border_white"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/savatar1" />

        <RelativeLayout
            android:id="@+id/info_bottom"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_map_bottom" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_name_infoDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特种兵001"
                    android:textColor="#FFF5EB" />

                <TextView
                    android:id="@+id/txt_ip_infoDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.103"
                    android:textColor="#FFF5EB" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_sendMessage_infoDetailLocation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg_green"
                android:padding="3dp"
                android:layout_marginRight="8dp"
                android:text="@string/send_msg"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            
            <Button
                android:id="@+id/btn_cancle_infoDetailLocation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
				android:layout_toLeftOf="@+id/btn_sendMessage_infoDetailLocation"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg_green"
                android:padding="3dp"
                android:layout_marginRight="8dp"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>