<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baidumap_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_location_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="..."
            android:textSize="8dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@color/bgGrey"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/imgBtn_location_userIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/avatar1" />

        <ImageButton
             android:id="@+id/imgBtn_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/a2c" />
    </LinearLayout>

</LinearLayout>