<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
 	<com.zl.armychat.widget.BaseBaiduMapLayoutView
        android:id="@+id/mapView_map2"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:clickable="true"/>
    
    <TextView 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        />
    
  <LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="120dp"
	android:background="@color/transgray"
	android:orientation="vertical">
	
      <RelativeLayout
          android:layout_width="fill_parent"
		  android:layout_height="fill_parent"
          >
          
      <Button
          android:id="@+id/close_share_btn"
          android:layout_width="32dp"
		  android:layout_height="32dp"
		  android:layout_marginTop="10dp"
		  android:layout_marginLeft="10dp"
		  android:background="@drawable/close_location_share_bg"
	   	  android:layout_alignParentLeft="true"
          />
      <Button
          android:id="@+id/switch_share_btn"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:layout_alignParentRight="true"
          android:background="@drawable/switch_location_share_bg"
          />
      
      <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
		android:orientation="horizontal">
		     <ImageButton
		          android:id="@+id/chater1"
		          android:layout_width="40dp"
		          android:layout_height="40dp"
		          android:src="@drawable/savatar1"
		          android:visibility="visible"/>
		     
		      <ImageButton
		          android:id="@+id/chater2"
		          android:layout_width="40dp"
		          android:layout_height="40dp"
		          android:layout_marginLeft="10dp"
		          android:src="@drawable/savatar2"
		          android:visibility="gone"/>
	     </LinearLayout>
      
       <TextView 
            android:id="@+id/shareLocationSum"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
		    android:text="位置共享"
		    android:textColor="@color/white"
        />
      
      </RelativeLayout>
    </LinearLayout>
    
  
    <LinearLayout
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="20dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:orientation="vertical">
	     <ImageButton
	          android:id="@+id/location_reset_btn"
	          android:layout_width="fill_parent"
	          android:layout_height="fill_parent"
	          android:background="@drawable/location_init_bg"
	          android:src="@drawable/location_init_normal"
	          android:visibility="gone"/>
	     
	     <ProgressBar 
	         android:id="@+id/progress_location"
	          android:layout_width="fill_parent"
	          android:layout_height="fill_parent"
	          android:background="@drawable/location_init_bg" />
     </LinearLayout>
     
     <Button
          android:id="@+id/talk_share_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/talk_location_share_bg"
          android:layout_marginBottom="20dp"
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          />
    
   
    
    
</RelativeLayout>