<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_float_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/call_icon_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/selector_call_audio_float_view"
        />

    <Chronometer
        android:id="@+id/call_time_ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:format="%s"
        android:maxLines="1"
        android:maxWidth="64dp"
        android:textColor="#000000"
        android:textSize="12sp"
        />
    
     <TextView
        android:id="@+id/waitCallTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:text="@string/waiting_accept_call"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        />
</FrameLayout>