<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		>

		<ImageView
			android:id="@+id/user_item_iv_avatar"
			android:layout_width="30dip"
			android:layout_height="30dip"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dip"
			android:layout_marginLeft="10dip"
			android:scaleType="fitXY" />

		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/user_item_iv_avatar"
			android:gravity="center_vertical"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="2dip"
				  >

				<TextView
					android:id="@+id/user_item_htv_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_marginTop="4dp"
					android:gravity="left"
					android:layout_centerVertical="true"
					android:singleLine="true"
					android:textColor="@color/forest_green"
					android:textSize="15sp" />
			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="5dip"
				android:focusable="false"
				android:gravity="left|center"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/user_item_htv_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/font_value"
					android:textSize="12sp" />
			</LinearLayout>
		</LinearLayout>
			
			 
			<TextView
					android:id="@+id/user_item_htv_stat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="20dip"
					android:layout_alignParentRight="true"
				    android:gravity="center"
				    android:layout_centerVertical="true"
					android:textColor="@color/forest_green"
					android:textSize="14sp" />
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:background="@color/view_color_darkslategray"
		android:visibility="visible" />

</LinearLayout>