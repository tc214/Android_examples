<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/layout_mgr_title"/>
    
	<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color_darkslategray" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp" >
     
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" 
            android:visibility="gone">

            <EditText
                android:id="@+id/et_radioNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:hint="@string/mcs_input_radio_num"
                android:maxLines="15"
                android:editable="true"
                android:focusable="true"
                android:digits="0123456789"
		        android:maxLength="15" 
                android:textColorHint="#ffffffff"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_radioNum"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="@string/mcs_radionum"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" 
            android:visibility="gone">

            <EditText
                android:id="@+id/et_radioIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:hint="@string/mcs_input_radio_ip"
                android:maxLines="15"
                android:editable="true"
                android:focusable="true"
                android:digits="0123456789."
		        android:maxLength="15" 
                android:textColorHint="#ffffffff"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_radioIP"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="@string/mcs_radio_ip"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" 
            android:visibility="gone">

            <EditText
                android:id="@+id/et_userIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:hint="@string/mcs_input_local_ip"
                android:maxLines="15"
                android:editable="true"
                android:focusable="true"
                android:digits="0123456789."
		        android:maxLength="15" 
                android:textColorHint="#ffffffff"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_userIP"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="@string/mcs_ip"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" 
            android:visibility="visible">

            <EditText
                android:id="@+id/et_userIMEI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:maxLines="15"
                android:editable="false"
                android:focusable="false"
                android:textColorHint="#ffffffff"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_userIMEI"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="@string/mcs_login_name"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="@string/mcs_setting_input_pwd"
                android:paddingLeft="120dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#ffffffff"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_password"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="@string/mcs_login_password"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
            <ImageView 
                android:id="@+id/iv_eye_login"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                android:background="@drawable/eye_gray_off"
                />
            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="30dp" 
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/typeRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/typeP2p"     
				android:layout_marginLeft="5dp"  
				android:layout_marginRight="8dp"         
				android:button="@drawable/mm_checkbox_btn"       
                android:text=" Radio"
                android:textSize="15sp"
                android:textColor="#fff"
                />
             <CheckBox
                android:id="@+id/typeP2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
				android:button="@drawable/mm_checkbox_btn"       
                android:text=" D2D"
                android:textSize="15sp"
                android:textColor="#fff"
                />
		</RelativeLayout>
		
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_enable_green"
            android:enabled="false"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="@string/mcs_sign_in"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_wenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/mcs_login_problem"
            android:textColor="#576B95"
            android:textSize="14sp" 
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone">

        <Button
            android:layout_margin="33dp"
            android:padding="8dp" 
            android:background="#F0F0F0"
            android:id="@+id/btn_qtlogin"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/mcs_register"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>