<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	 >

	 
    <com.zl.armychat.custom.view.EmoticonsTextView
		android:id="@+id/message_chattime_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="1dp"
		android:gravity="center_vertical"
		android:paddingBottom="2dip"
		android:paddingLeft="5dip"
		android:paddingTop="2dip"
		android:text="tesxt"
		android:textColor="@color/txt_color_black"
		android:textSize="16sp"
		android:visibility="visible" />
    
	<ImageView
		android:id="@+id/message_iv_msgimage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/message_chattime_text"
		android:paddingLeft="4dip"
		android:paddingRight="5dip"
		android:gravity="center_vertical"
		android:src="@drawable/mil_chat_voice_call_receive"
		android:visibility="visible" />
	
</RelativeLayout>