<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_edit_userinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />
 
    <View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/view_color_deepskyblue" />
    
    
     <RelativeLayout
            android:id="@+id/rl_profile_photo"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
              >
		
			<RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="100dip"  
                 android:layout_marginRight="20dp"
	              >
	            <ImageView
	                android:id="@+id/iv_head"
	                android:layout_width="80.0dip"
	                android:layout_height="80.0dip"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/head" />
	
	              <ImageView
	                    android:id="@+id/img_edit"
	                    android:layout_width="15dp"
	                    android:layout_height="15dp" 
	                    android:layout_marginTop="10dp"
	                    android:layout_alignParentRight="true"
	                    android:layout_alignParentTop="true"
	                    android:src="@drawable/jy_icon_resume"
	                    android:visibility="visible" />
              </RelativeLayout>
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_marginLeft="10dp"
	                android:gravity="left"
	                android:layout_centerVertical="true"
	                android:text="@string/profile_photo"
	                android:textColor="@color/txt_color"
	                android:textSize="16sp" />
        </RelativeLayout>
    
     		<View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:background="@color/black2" />
                
     		 <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_marginTop="12dp"
	            android:layout_height="48dp" 
	            android:visibility="visible">
	
	            <EditText
	                android:id="@+id/et_nickname_edit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="left|center_vertical"
	                android:layout_centerVertical="true"
	                android:background="@drawable/edittext_login"
	                android:paddingLeft="130dp"
	                android:singleLine="true"
	                android:textColorHint="#DDDDDD"
	                android:textColor="@color/txt_color"
	                android:textSize="16sp" />
	
	            <TextView
	                android:layout_width="150dp"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="28dp"
	                android:layout_marginLeft="10dp"
	                android:gravity="left"
	                android:layout_alignLeft="@id/et_nickname_edit"
	                android:layout_centerVertical="true"
	                android:text="@string/mcs_setting_nickname"
	                android:textColor="@color/txt_color"
	                android:textSize="16sp" />
	        </RelativeLayout>
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="visible">

          <EditText
                android:id="@+id/et_groupname_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="130dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/white"
                android:textSize="16sp" />
          
            <TextView
                android:id="@+id/txt_groupname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_alignLeft="@id/et_groupname_edit"
                android:layout_centerVertical="true"
                android:text="@string/mcs_setting_groupname"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
            
             <Spinner 
                android:id="@+id/sp_groupname_choice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext_login"
				android:scrollbars="vertical"
                android:textColorHint="@color/txt_color"
                android:text="@string/mcs_setting_groupname"
                android:textSize="16sp" 
                android:textColor="@color/txt_color"
                android:visibility="gone"/>
             
            <ImageView
                android:id="@+id/iv_groupname"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/group_arrow_down"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="visible">

            <TextView
                android:id="@+id/et_userIMEI_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="130dp"
                android:singleLine="true"
                android:editable="false"
                android:focusable="false"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_userIMEI_edit"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:text="@string/mcs_meshchat_id"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
 		<View
               android:layout_width="fill_parent"
               android:layout_height="0.1dp"
               android:background="@color/black2" />           
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="visible">

            <TextView
                android:id="@+id/et_userRadio_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="150dp"
                android:singleLine="true"
                android:editable="false"
                android:focusable="false"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_alignLeft="@id/et_userRadio_edit"
                android:layout_centerVertical="true"
                android:text="@string/mcs_radionum"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:background="@color/black2" />
        
       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="visible">

            <TextView
                android:id="@+id/et_userIP_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="130dp"
                android:singleLine="true"
                android:editable="false"
                android:focusable="false"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_alignLeft="@id/et_userIP_edit"
                android:layout_centerVertical="true"
                android:text="@string/mcs_ip"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:background="@color/black2" />
        
     
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="gone">

            <Spinner 
                android:id="@+id/sp_gender_choice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:textColorHint="@color/txt_color"
                android:textSize="16sp" 
                android:textColor="@color/txt_color"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sp_gender_choice"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/mcs_setting_gender"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" 
            android:visibility="gone">

            <EditText
                android:id="@+id/et_birthday_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="100dp"
                android:singleLine="true"
                 android:editable="false"
                android:focusable="false"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
           

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_birthday_edit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="@string/mcs_setting_birthday"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />
        </RelativeLayout>
       
       <DatePicker 
                android:id="@+id/dp_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
       
        <Button
            android:id="@+id/btn_modify_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_enable_green"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:enabled="true"
            android:text="@string/mcs_ok"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

</LinearLayout>
