<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_black"
    android:orientation="vertical" >

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" 
            android:visibility="visible">

            <EditText
                android:id="@+id/et_userIMEI_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:paddingLeft="140dp"
                android:singleLine="true"
                android:maxLines="15"
                android:editable="false"
                android:focusable="false"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_userIMEI_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mcs_login_name"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/et_oldpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="@string/mcs_setting_input_old_pwd"
                android:paddingLeft="140dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_oldpwd_pwd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_oldpwd_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mcs_setting_old_password"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/et_newpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="@string/mcs_setting_input_new_pwd"
                android:paddingLeft="140dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_newpwd_pwd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_newpwd_pwd"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/mcs_setting_new_password"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
        
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_confirmpwd_pwd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_confirmpwd_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/mcs_setting_confirm_password"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_confirmpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:ems="14"
                android:hint="@string/mcs_setting_input_confirm_new_pwd"
                android:paddingLeft="140dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#DDDDDD"
                android:textSize="12sp" />

        </RelativeLayout>

       
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
        >

       
        <Button
            android:id="@+id/btn_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_enable_green"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="@string/mcs_setting_pwd_ok"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>