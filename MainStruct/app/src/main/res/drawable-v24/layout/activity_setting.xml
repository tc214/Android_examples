<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/black"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<include layout="@layout/layout_title" />
	
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none"
		>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			 <TextView
					android:id="@+id/txt_usersafe"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/mcs_setting_safe" />
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			
			 
	 
			
			<TextView
					android:id="@+id/txt_newInfo"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/mcs_setting_newInfo" />
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			
			
			 
			
			<TextView
					android:id="@+id/txt_no_disturbing"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/mcs_setting_no_disturbing" />
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >

			    			<TextView
			    			    android:id="@+id/txt_wifi_name_filter"
			    			    style="@style/TxtTitle"
			    			    android:layout_width="wrap_content"
			    			    android:layout_height="50dp"
			    			    android:background="@drawable/setting_item_selector"
			    			    android:gravity="center_vertical"
			    			    android:paddingLeft="16dp"
			    			    android:paddingRight="10dp"
			    			    android:text="@string/txt_wifi_name_filter"
			    			    android:textSize="16sp" />
			
			            <EditText
			                android:id="@+id/et_wifi_name_filter_edit"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_gravity="center_vertical"
			                android:layout_marginRight="10dp"
			                android:background="@drawable/edittext_login"
			                android:gravity="left|center_vertical"
			                android:inputType="text"
			                android:paddingLeft="10dp"
			                android:singleLine="true"
			                android:textColor="@color/txt_color"
			                android:textColorHint="#DDDDDD"
			                android:textSize="16sp" />

			</LinearLayout>

			            
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			
			<TextView
					android:id="@+id/txt_universality"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/mcs_setting_general" />
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			
			<TextView
					android:id="@+id/txt_about"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/mcs_setting_about" />
			<View
				android:background="@color/view_color_darkslategray" 
				android:layout_width="fill_parent"
				android:layout_height="1px" />
			 
			<LinearLayout
				android:gravity="center"
				android:padding="20.0dip"
				android:layout_width="fill_parent"
				android:layout_marginTop="20dp"
				android:layout_height="80.0dip">
				<Button
				    android:id="@+id/btn_exit_login"
					android:textColor="@color/white"
					android:background="@drawable/btn_bg_red2"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="50.0dip"
					android:text="@string/mcs_setting_exit_login" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
