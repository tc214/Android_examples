<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        layout="@layout/activity_title" />

    

    <TextView
        android:id="@+id/tv_wifilist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:background="@color/gray"
        android:text="@string/mcs_wifi_available"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lv_wifilist"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_below="@+id/tv_wifilist" >
    </ListView>
    
    
    <LinearLayout 
         android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >
        >
         <Button
            android:id="@+id/btn_refreshWifi"
            android:layout_width="80dp"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style_one"
            android:text="@string/mcs_refresh"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_font"
            android:textStyle="bold" />

        
        <Button
            android:id="@+id/btn_createHotSpot"
            android:layout_width="80dp"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style_one"
            android:text="@string/mcs_wifi_createHotSpot"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_font"
            android:textStyle="bold" />
        
                <Button
            android:id="@+id/btn_closeHotSpot"
            android:layout_width="80dp"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style_one"
            android:text="@string/mcs_wifi_closeHotSpot"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_font"
            android:textStyle="bold" />

       
        
        
        </LinearLayout>
    
    

</RelativeLayout>